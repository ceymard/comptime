{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": ".",
    "rootDir": ".",
    "noStrictGenericChecks": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "types": ["node"]
  },
  "exclude": ["__dist__", "__build__", "tests"]
}

